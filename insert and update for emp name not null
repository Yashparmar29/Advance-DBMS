use yash;
CREATE TABLE Department (
    dept_id   INT PRIMARY KEY,
    dept_name VARCHAR(50) UNIQUE NOT NULL
);

CREATE TABLE Employee (
    emp_id    INT,
    emp_name  VARCHAR(50),
    dept_id   INT
);

#1)
DELIMITER //

CREATE TRIGGER emp_notnull_insert
BEFORE INSERT ON Employee
FOR EACH ROW
BEGIN
    IF NEW.emp_name IS NULL THEN
        SIGNAL SQLSTATE '45000'
        SET MESSAGE_TEXT = 'emp_name cannot be NULL';
    END IF;
END //

DELIMITER ;
DELIMITER //

CREATE TRIGGER emp_notnull_update
BEFORE UPDATE ON Employee
FOR EACH ROW
BEGIN
    IF NEW.emp_name IS NULL THEN
        SIGNAL SQLSTATE '45000'
        SET MESSAGE_TEXT = 'emp_name cannot be NULL';
    END IF;
END //

DELIMITER ;

insert into employee values(01,'yash parmar',2);
insert into employee(emp_id,dept_id) values(02,2);
